{
  "manifest_version": 2,

  "name": "Junkiree",
  "description": "Junkiree loadshedding schedule viewer and organizer for Google Chrome and Mozilla Firefox",
  "version": "3.5.1",
  "background": {
      "scripts": ["js/ext/jquery.min.js", "js/junkiree.js","js/recursive.js", "js/initialize.js"]
   },
  "browser_action": {
  "default_icon": {
         "19": "icons/junkiree-19.png",
         "38": "icons/junkiree-38.png"
      },
    "default_popup": "popup.html"
  },
  "options_page": "junkiree-schedule.html#options",
  "icons": {
      "128": "icons/junkiree-128.png",
      "16": "icons/junkiree-16.png",
      "32": "icons/junkiree-32.png",
      "48": "icons/junkiree-48.png"
   },
  "permissions": [
	"tabs", "http://*/*", "https://*/*","notifications"
  ]
}
